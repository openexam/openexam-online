        $exam->show_state = true;
        $exam->show_staff = false;
        $exam->show_roles = false;
        $exam->show_other = true;
        $exam->show_grade = true;
} else {
        $exam->show_state = true;
        $exam->show_staff = true;
        $exam->show_roles = true;
        $exam->show_other = true;
        $exam->show_grade = true;
}

?>

