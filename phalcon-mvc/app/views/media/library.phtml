function set_resource_defaults($type, $resource, $url)
{
        if ($type == 'image') {
                $resource->img = $url->get($resource->path);
        } else {
                $resource->img = $url->get('img/file-icon.png');
        }
        if (!isset($resource->name)) {
                $resource->name = basename($resource->path);
        }
}

